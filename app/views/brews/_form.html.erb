<%= form_for @brew do |f| %>
  <%= render 'shared/errors', object: @brew %>
  <fieldset>
    <div>
      <%= f.label :product_id %>
      <%= f.select :product_id, Product.all.map {|p| [p.name, p.id]} %>
    </div>
    <div>
      <%= f.label :amount_full %>
      <%= f.number_field(:amount_full, in: 1.0..100.0, step: 1.0) %>
    </div>
    <div>
      <%= f.label :amount_sample %>
      <%= f.number_field(:amount_sample, in: 1.0..100.0, step: 1.0) %>
    </div>
    <div>
      <%= f.label :date %>
      <%= f.datetime_field :date %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div class="actions">
      <%= f.submit class: "btn" %>
    </div>
  </fieldset>
<% end %>
