<h1>Inventory</h1>

<table class="display" id="home">
  <thead>
    <tr>
      <td>product</td>
      <td>sold full size</td>
      <td>brewed full size</td>
      <td>full size inventory</td>
      <td>sold sample</td>
      <td>brewed sample</td>
      <td>same size inventory</td>
    </tr>
  </thead>
  <tbody>
    <% @brews.each do |b| %>
      <tr>
        <td><%= link_to b[:name], product_url(b[:id]) %></td>
        <td><%= b[:brewed_full] %></td>
        <td><%= b[:sold_full] %></td>
        <td><%= b[:total_full] %></td>
        <td><%= b[:brewed_sample] %></td>
        <td><%= b[:sold_sample] %></td>
        <td><%= b[:total_sample] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
