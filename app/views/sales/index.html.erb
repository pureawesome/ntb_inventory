<h1>sales</h1>

<%= link_to('Log a Sale', new_sale_path, class: "btn") %>

<table class="display" id="sales">
  <thead>
    <tr>
      <td>ID</td>
      <td>Product</td>
      <td><%= Sale.human_attribute_name(:quantity_full) %></td>
      <td><%= Sale.human_attribute_name(:quantity_sample) %></td>
      <td>Paid?</td>
      <td>Amount</td>
      <td><%= Sale.human_attribute_name(:date) %></td>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |b| %>
      <tr>
        <td><%= link_to b.id, b %></td>
        <td><%= b.product.name %></td>
        <td><%= b.quantity_full %></td>
        <td><%= b.quantity_sample %></td>
        <td><%= b.paid %></td>
        <td><%= b.amount %></td>
        <td><%= get_date(b.date) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
