<h1>brews</h1>

<%= link_to('Log a Brew', new_brew_path, class: "btn") %>

<table class="display" id="brews">
  <thead>
    <tr>
      <td>ID</td>
      <td>Product</td>
      <td><%= Brew.human_attribute_name(:quantity_full) %></td>
      <td><%= Brew.human_attribute_name(:quantity_sample) %></td>
      <td><%= Brew.human_attribute_name(:date) %></td>
    </tr>
  </thead>
  <tbody>
    <% @brews.each do |b| %>
      <tr>
        <td><%= link_to b.id, b %></td>
        <td><%= b.product.name %></td>
        <td><%= b.quantity_full %></td>
        <td><%= b.quantity_sample %></td>
        <td><%= get_date(b.date) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
